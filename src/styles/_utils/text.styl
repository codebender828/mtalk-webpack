text-overflow()
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

text-thin()
  font-weight: 300

text-medium()
  font-weight: 500

text-semi-bold()
  font-weight: 600

text-mute()
  font-size: 12px
  line-height: 17px

multiline-overflow($line = 2, $lineHeight = 20px, $needLineHeight = true)
  display: -webkit-box
  -webkit-line-clamp: $line
  -webkit-box-orient: vertical
  overflow: hidden
  text-overflow: ellipsis
  white-space: normal
  // max-height: ($line * $lineHeight)
  if $needLineHeight
    line-height: $lineHeight
